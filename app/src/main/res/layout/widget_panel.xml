<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="152dp"
              android:padding="@dimen/widget_margin"
              android:orientation="vertical"
              android:background="@drawable/png_background"
              android:elevation="12dp">

    <RelativeLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:gravity="center_vertical"
    android:padding="0dp">
        <TextView
                android:id="@+id/title_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/synchronizing"
                android:textColor="@android:color/black"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_alignParentTop="true"
                android:layout_marginStart="8dp"
                android:fontFamily="sans-serif-condensed"
                android:layout_gravity="center_vertical" android:layout_toEndOf="@+id/icon_state"/>
        <TextView
                android:text="..."
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/text_range"
                android:textStyle="bold" android:textSize="16sp"
                android:layout_toStartOf="@+id/text_km" android:layout_marginEnd="8dp"
                android:layout_alignParentTop="true" android:textAlignment="textEnd"
                android:layout_gravity="center_vertical|end" />
        <TextView
                android:text="km"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/text_km"
                android:textStyle="bold" android:textSize="16sp"
                android:fontFamily="sans-serif-condensed"
                android:layout_alignParentTop="true" android:layout_toStartOf="@+id/icon_battery"
                android:layout_alignParentBottom="false"
                android:layout_marginEnd="8dp"
                android:layout_gravity="center_vertical|end" />
        <ImageView
                android:layout_width="52dp"
                android:layout_height="22dp" android:src="@drawable/png_battery_offline"
                android:id="@+id/icon_battery"
                android:layout_marginEnd="12dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_gravity="center_vertical|end"/>
        <ImageView
                android:src="@drawable/png_online"
                android:id="@+id/icon_state"
                android:layout_gravity="center_vertical"
                android:visibility="visible" android:elevation="8dp" android:layout_alignParentEnd="false"
                android:layout_alignParentBottom="false"
                android:layout_marginStart="12dp" android:layout_width="54dp"
                android:layout_height="24dp"/>

    </RelativeLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:layout_margin="8dp"
            android:gravity="center_vertical|center_horizontal">

        <Button

                android:layout_width="60dp"
                android:layout_height="60dp"
                android:id="@+id/button_fan"
                android:gravity="center_vertical"
                android:layout_margin="4dp"
                android:text="22.5Â°"
                android:textAlignment="center" android:textAllCaps="false" android:paddingTop="26dp"
                android:paddingLeft="4dp" android:textColor="@android:color/white"
                android:background="@drawable/button_fan_offline"/>
        <Button

                android:layout_width="60dp"
                android:layout_height="60dp"
                android:id="@+id/button_lock"
                android:background="@drawable/button_lock_offline"

                android:gravity="center_vertical" android:layout_margin="4dp"/>
        <Button

                android:layout_width="60dp"
                android:layout_height="60dp"
                android:id="@+id/button_key"
                android:background="@drawable/button_key_offline"

                android:gravity="center_vertical" android:layout_margin="4dp"/>
        <Button

                android:layout_width="60dp"
                android:layout_height="60dp"
                android:id="@+id/button_nav"
                android:background="@drawable/button_nav_offline"

                android:gravity="center_vertical" android:layout_margin="4dp"/>
        <Button

                android:layout_width="60dp"
                android:layout_height="60dp"
                android:id="@+id/button_speaker"
                android:background="@drawable/button_speaker_offline"

                android:gravity="center_vertical" android:layout_margin="4dp"/>

    </LinearLayout>


</LinearLayout>