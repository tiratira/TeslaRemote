<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".SplashActivity"
        android:background="#00ffffff">

    <ImageView
            android:layout_width="match_parent"
            android:layout_height="220dp" app:srcCompat="@drawable/png_icon_large" android:id="@+id/appicon"
            android:transitionName="shareLogo"/>
    <ImageView
            android:layout_width="match_parent"
            android:layout_height="30dp" app:srcCompat="@drawable/text_title" android:id="@+id/apptitle"
            android:layout_marginTop="180dp"
            android:transitionName="shareTitle"/>
    <ImageView
            android:layout_width="match_parent"
            android:layout_height="150dp" app:srcCompat="@drawable/png_demo_window"
            android:id="@+id/demowidget" android:layout_marginTop="290dp"/>
    <TextView
            android:text="@string/splash_hint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/titlehint" android:textAlignment="center"
            android:textSize="22sp" android:layout_marginTop="230dp"/>
    <com.google.android.material.button.MaterialButton
            android:text="@string/button_continue"
            android:layout_width="300dp"
            android:layout_height="64dp" android:id="@+id/buttonContinue"
            android:textSize="18sp"
            android:layout_gravity="bottom|center_horizontal" android:layout_marginBottom="36dp"
            style="@style/NavigationButtonStyle"
            android:onClick="continueClick"
    />
</androidx.coordinatorlayout.widget.CoordinatorLayout>