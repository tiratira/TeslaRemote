<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".SplashActivity"
android:background="#00ffffff">

    <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:src="@drawable/png_studio" android:id="@+id/imageView"
            android:layout_gravity="bottom|center_horizontal" android:paddingBottom="32dp"/>
    <ImageView
            android:layout_width="match_parent"
            android:layout_height="220dp" app:srcCompat="@drawable/png_icon_large" android:id="@+id/appicon"
            android:layout_gravity="center" android:layout_marginTop="-30dp"/>
    <ImageView
            android:layout_width="match_parent"
            android:layout_height="30dp" app:srcCompat="@drawable/text_title" android:id="@+id/apptitle"
            android:layout_marginTop="150dp" android:layout_gravity="center"/>
    <ImageView
            android:layout_width="match_parent"
            android:layout_height="150dp" app:srcCompat="@drawable/png_demo_window"
            android:id="@+id/demowidget" android:layout_marginTop="290dp" android:visibility="invisible"/>
    <TextView
            android:text="更加快捷的控制您的特斯拉"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/textView2" android:textAlignment="center"
            android:textSize="22sp" android:layout_marginTop="230dp" android:visibility="invisible"/>
    <Button
            android:text="CONTINUE"
            android:layout_width="300dp"
            android:layout_height="56dp" android:id="@+id/button"
            android:layout_gravity="bottom|center_horizontal" android:layout_marginBottom="36dp"
            style="@style/NavigationButtonStyle" android:visibility="invisible"
    android:onClick="continueClick"/>

</androidx.coordinatorlayout.widget.CoordinatorLayout>